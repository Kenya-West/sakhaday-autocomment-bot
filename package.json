{
  "name": "sakhaday-autocomment-bot",
  "version": "1.0.0",
  "description": "A bot to write a first comment in Teelgram channel (with native comments on)",
  "main": "index.js",
  "scripts": {
    "start:local": "cross-env NODE_ENV=development npx nodemon",
    "start:tsnode:development": "cross-env NODE_ENV=development ts-node src/index.ts",
    "start:tsnode:production": "cross-env NODE_ENV=production ts-node src/index.ts",
    "start:development": "cross-env NODE_ENV=development npm run build && node build/index.js",
    "start:production": "cross-env NODE_ENV=production npm run build && node build/index.js",
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "lint:cache": "eslint . --ext .ts --cache",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "nodemon": "^2.0.20",
    "onchange": "^7.1.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "jest-cucumber": "^3.0.1",
    "telegraf": "^4.12.2"
  }
}
